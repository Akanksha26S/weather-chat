{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite/client"],

    // ðŸ‘‡ðŸ‘‡ðŸ‘‡ THESE ARE THE LINES THAT FIX YOUR ERRORS ðŸ‘‡ðŸ‘‡ðŸ‘‡
    "jsx": "react-jsx", // Enables JSX processing (Fixes TS17004)
    "moduleResolution": "bundler", // Ensures correct module lookup
    "allowSyntheticDefaultImports": true, // Allows standard 'import React from "react"' syntax (Fixes TS1259)
    "isolatedModules": true, // Standard practice for Vite/Babel environments
    "noEmit": true // Prevents TypeScript from outputting JS files (Vite handles this)
    // ðŸ‘†ðŸ‘†ðŸ‘† END OF FIXES ðŸ‘†ðŸ‘†ðŸ‘†
  },
  "include": ["src"],
  "files": ["src/main.tsx"]
}